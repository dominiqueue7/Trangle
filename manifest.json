{
  "manifest_version": 3,
  "name": "Trangle",
  "version": "0.4",
  "default_locale": "en",
  "description": "",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "js": ["script.js"],
      "matches": ["*://*/*"],
      "include_globs": ["*://*www.google*/search*"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "icon-128.png",
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png"
  },
  "action": {
    "default_icon": "icon-32.png",
    "default_popup": "options.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}